{% extends "@Admin/Default/back.html.twig" %}

{% block body %}

    <div class="left-ads-display col-lg-9">
        <div class="row">


            {{ form_start(form) }}



            <table align="center">
                <form action="#" method="post">

                    <div class=" agile-wls-contact-mid">

                        <h3>Modifier la formation {{ nom }}</h3>
                        <div class="form-group contact-forms">
                            <label class="control-label" >Nom la formation </label>
                            <input type="text" class="form-control"   name="nom" id="nom"pattern="[a-zA-Z]{4,}" title="Veuillez saisir minimum 4 lettres" required  />

                        </div>

                        <div class="form-group contact-forms">
                            <label class="control-label">Type de la formation </label>
                            {{ form_widget(form.type,{'attr':{'class':'form-control','placeholder':"Saisir le type de la formation"}}) }}
                            {{ form_errors(form.type) }}
                        </div>


                        <div class="form-group contact-forms">


                            <label class="control-label">Date de la formation </label>

                            <input type="date" class="form-control" rows="3"  name="date" id="dat" value="{{ fot}}">



                        </div>
                        <div class="form-group contact-forms">
                            <label class="control-label">Lieu de la formation</label>
                            {{ form_widget(form.lieu,{'attr':{'class':'form-control','placeholder':"Saisir le lieu de la formation"}}) }}
                            {{ form_errors(form.lieu) }}
                        </div>
                        <div class="form-group contact-forms">
                            <label class="control-label">Description de la formation </label>
                            {{ form_widget(form.description,{'attr':{'class':'form-control','placeholder':"Saisir la description de la formation"}}) }}
                            {{ form_errors(form.description) }}
                        </div>
                        <div class="form-group contact-forms">
                            <label class="control-label">L'heure de la formation </label>
                            {{ form_widget(form.heure,{'attr':{'class':'form-control','placeholder':"Saisir l'heure de la formation"}}) }}
                            {{ form_errors(form.heure) }}
                        </div>
                        <div class="form-group contact-forms">
                            <label class="control-label">Nom du formateur </label>
                            {{ form_widget(form.formateur,{'attr':{'class':'form-control','placeholder':"Saisir le nom du formateur"}}) }}
                            {{ form_errors(form.formateur) }}
                        </div>
                        <div class="controls">
                            <label class="control-label">Choisir une nouvelle photo de la formation  </label>
                            {{ form_widget(form.file) }}
                            {{ form_errors(form.file) }}
                        </div>

                        <button type="submit" class="btn subscrib-btnn" name="_submit" id="_submit" onclick="var GivenDate = document.getElementById('dat').value;
                                                                                                        var CurrentDate = new Date();
                                                                                                        GivenDate = new Date(GivenDate);
                                                                                                        if( GivenDate <= CurrentDate){
                                                                                                            alert('invalide!donner une date supérieure à la date courrante ');
                                                                                                            return false;
                                                                                                            }">
                        <div class="row">
                            <div class="col-md-3 col-lg-3 col-sm-12">

                                <button type="submit" class="btn btn-default">Modifier</button>
                            </div>
                        </div>
                    </div>
                </form>
            </table>


            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}